<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dbtech.system.controllers.DirectoryController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT">
        <children>
            <VBox>
                <Label text="Phone Directory">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
                <Label text="Quick access to important hotel contacts" textFill="#64748b" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleNewContact" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-cursor: hand;" text="+ New Contact">
                <font><Font name="System Bold" size="14.0" /></font>
                <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
            </Button>
        </children>
    </HBox>

    <HBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #E2E8F0; -fx-border-radius: 5;">
        <padding><Insets bottom="10.0" left="15.0" right="15.0" top="10.0" /></padding>
        <children>
            <FontIcon iconColor="#94a3b8" iconLiteral="fas-search" iconSize="16" />
            <TextField fx:id="searchField" promptText="Search directory..." style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                <HBox.margin><Insets left="10.0" /></HBox.margin>
            </TextField>
        </children>
    </HBox>

    <TableView fx:id="directoryTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="colPhone" prefWidth="150.0" text="Phone Number" />
            <TableColumn fx:id="colLocation" prefWidth="250.0" text="Location" />
            <TableColumn fx:id="colActions" prefWidth="130.0" text="Actions" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>