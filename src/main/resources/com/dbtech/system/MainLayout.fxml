<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainContainer" prefHeight="700.0" prefWidth="1100.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dbtech.system.controllers.MainController">

    <left>
        <VBox prefHeight="700.0" prefWidth="240.0" style="-fx-background-color: #0F172A;" BorderPane.alignment="CENTER">
            <children>
                <Label text="HotelManager" textFill="#22c55e">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="30.0" left="30.0" top="30.0" />
                    </VBox.margin>
                    <graphic>
                        <FontIcon iconColor="#22c55e" iconLiteral="fas-hotel" iconSize="24" />
                    </graphic>
                </Label>

                <Button fx:id="btnDashboard" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleDashboard" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="Dashboard">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="fas-th-large" iconSize="18" />
                    </graphic>
                </Button>

                <Button fx:id="btnReservations" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleReservations" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="Reservations">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="far-calendar-alt" iconSize="18" />
                    </graphic>
                </Button>

                <Button fx:id="btnClients" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleClients" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="Clients">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="fas-user-friends" iconSize="18" />
                    </graphic>
                </Button>

                <Button fx:id="btnRooms" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleRooms" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="Rooms">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="fas-bed" iconSize="18" />
                    </graphic>
                </Button>

                <Button fx:id="btnStaff" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleStaff" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="Staff">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="fas-user-cog" iconSize="18" />
                    </graphic>
                </Button>

                <Button fx:id="btnSuppliers" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleSuppliers" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="Suppliers">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="fas-boxes" iconSize="18" />
                    </graphic>
                </Button>

                <Button fx:id="btnOrders" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleOrders" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="Orders">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="fas-shopping-cart" iconSize="18" />
                    </graphic>
                </Button>

                <Button fx:id="btnDirectory" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleDirectory" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="Directory">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="fas-phone-alt" iconSize="18" />
                    </graphic>
                </Button>

                <Button fx:id="btnTodo" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleTodo" prefHeight="50.0" prefWidth="240.0" styleClass="menu-button" text="To-Do">
                    <graphic>
                        <FontIcon iconColor="#94a3b8" iconLiteral="fas-tasks" iconSize="18" />
                    </graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="2.0">
                    <children>
                        <Label text="University Project" textFill="#475569">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label text="Database Technology Course" textFill="#334155">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="30.0" />
                    </padding>
                </VBox>

            </children>
        </VBox>
    </left>

    <center>
        <VBox fx:id="contentArea" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #F8FAFC;" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>