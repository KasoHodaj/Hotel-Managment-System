<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dbtech.system.controllers.StaffController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT">
        <children>
            <VBox>
                <Label text="Staff">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
                <Label text="Manage your hotel staff members" textFill="#64748b" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleNewStaff" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-cursor: hand;" text="+ New Staff Member">
                <font><Font name="System Bold" size="14.0" /></font>
                <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
            </Button>
        </children>
    </HBox>

    <HBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #E2E8F0; -fx-border-radius: 5;">
        <padding><Insets bottom="10.0" left="15.0" right="15.0" top="10.0" /></padding>
        <children>
            <FontIcon iconColor="#94a3b8" iconLiteral="fas-search" iconSize="16" />
            <TextField fx:id="searchField" promptText="Search staff..." style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                <HBox.margin><Insets left="10.0" /></HBox.margin>
            </TextField>
        </children>
    </HBox>

    <TableView fx:id="staffTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="colRole" prefWidth="120.0" text="Role" />
            <TableColumn fx:id="colPhone" prefWidth="160.0" text="Phone" />

            <TableColumn fx:id="colWorkDays" prefWidth="250.0" text="Work Days" />

            <TableColumn fx:id="colSalary" prefWidth="110.0" text="Salary" />
            <TableColumn fx:id="colActions" prefWidth="170.0" text="Actions" />
        </columns>

    </TableView>
</VBox>